<%- include("../partials/header.ejs") %>

<div class="container">
  <div class="row">
    <div style="width: 30%; margin: 25px auto;">
      <h1 style="text-align: center;">Add a New Product</h1>
      <form action="/products" method="POST">
        <div class="form-group">
          <input
            type="text"
            placeholder="Product Name"
            name="name"
            class="form-control"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            placeholder="Image Url"
            name="image"
            class="form-control"
            required
          />
        </div>
        
        <div class="form-group">
          <input
            type="number"
            placeholder="Price"
            name="price"
            class="form-control"
            required
          />
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" rows="10" placeholder="Description" required></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/products">Go Back</a>
    </div>
  </div>
</div>

<%- include("../partials/footer.ejs") %>
