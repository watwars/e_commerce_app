<%- include("../partials/header.ejs") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1 class="index-heading">E-Commerce Website</h1>
      <p class="index-p">
        View hundreds of high-quality second-hand products for affordable prices
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <div class="col-lg-12">
      <h3 style="margin-bottom: 20px;">Our Most Popular Products</h3>
    </div>

    <% product.forEach(function(product){ %>
    <div class="col-md-6 col-12 col-sm-6 col-lg-4 col-xl-3">
      <div class="card" style="width: 16rem;">
        <img
          class="card-img-top"
          src="<%=product.image%>"
          alt="Card image cap"
        />
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text">$<%= product.price %></p>
          <a href="/products/<%= product._id %> " class="btn btn-primary">View More</a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<%- include("../partials/footer.ejs") %>
